<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>
	<key>CFBundleDisplayName</key>
        <string>JournalMate</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- Background Modes for Push Notifications and Background Fetch -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
		<string>processing</string>
	</array>

	<!-- Background Task Identifiers for BGTaskScheduler -->
	<key>BGTaskSchedulerPermittedIdentifiers</key>
	<array>
		<string>ai.journalmate.app.reminderSync</string>
		<string>ai.journalmate.app.widgetRefresh</string>
	</array>

	<!-- Privacy - Camera Usage Description -->
	<key>NSCameraUsageDescription</key>
	<string>JournalMate needs access to your camera to capture photos for your journal entries and activities.</string>

	<!-- Privacy - Photo Library Usage Description -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>JournalMate needs access to your photo library to select photos for your journal entries and activities.</string>

	<!-- Privacy - Photo Library Additions Usage Description -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>JournalMate needs permission to save photos to your photo library.</string>

	<!-- Privacy - Location When In Use Usage Description -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>JournalMate uses your location to tag activities and journal entries with location information.</string>

	<!-- Privacy - Location Always Usage Description (optional, for background location) -->
	<key>NSLocationAlwaysUsageDescription</key>
	<string>JournalMate may use your location in the background to provide location-based reminders and insights.</string>

	<!-- Privacy - Location Always and When In Use Usage Description -->
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>JournalMate uses your location to tag activities and provide location-based features.</string>

	<!-- Privacy - Contacts Usage Description -->
	<key>NSContactsUsageDescription</key>
	<string>JournalMate needs access to your contacts to help you invite friends and share activities.</string>

	<!-- Privacy - Calendars Usage Description -->
	<key>NSCalendarsUsageDescription</key>
	<string>JournalMate needs access to your calendar to schedule activities and set reminders.</string>

	<!-- Privacy - Reminders Usage Description -->
	<key>NSRemindersUsageDescription</key>
	<string>JournalMate needs access to your reminders to help you track tasks and goals.</string>

	<!-- Privacy - Microphone Usage Description (for voice input) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>JournalMate needs access to your microphone for voice journaling and speech-to-text features.</string>

	<!-- Privacy - Speech Recognition Usage Description -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>JournalMate uses speech recognition to convert your voice recordings into text for journal entries.</string>

	<!-- Privacy - Face ID Usage Description (for biometric authentication) -->
	<key>NSFaceIDUsageDescription</key>
	<string>JournalMate uses Face ID to securely protect your journal entries and personal data.</string>

	<!-- URL Schemes for Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>ai.journalmate.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>journalmate</string>
			</array>
		</dict>
		<!-- Google Sign-In URL Scheme (reversed client ID) -->
		<dict>
			<key>CFBundleURLName</key>
			<string>com.google.sign-in</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>com.googleusercontent.apps.481740120979-76fs0ru0uikj5o33mr87vhua8c54657f</string>
			</array>
		</dict>
	</array>

	<!-- Allow Universal Links -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:journalmate.ai</string>
		<string>applinks:journalmate.replit.app</string>
	</array>

	<!-- Live Activities Support -->
	<key>NSSupportsLiveActivities</key>
	<true/>
</dict>
</plist>
