<?xml version="1.0" encoding="utf-8"?>
<!-- 4x1 Wide Widget - Ring + Stats with Labels -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Small Triple Ring -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp">

        <!-- Outer Ring Background -->
        <ProgressBar
            android:id="@+id/widget_ring_outer_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/widget_ring_outer_bg" />

        <!-- Outer Ring (Done - Green) -->
        <ProgressBar
            android:id="@+id/widget_ring_outer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_ring_outer" />

        <!-- Middle Ring Background -->
        <ProgressBar
            android:id="@+id/widget_ring_middle_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/widget_ring_middle_bg" />

        <!-- Middle Ring (Pending - Orange) -->
        <ProgressBar
            android:id="@+id/widget_ring_middle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_ring_middle" />

        <!-- Inner Ring Background -->
        <ProgressBar
            android:id="@+id/widget_ring_inner_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/widget_ring_inner_bg" />

        <!-- Inner Ring (Activities - Blue) -->
        <ProgressBar
            android:id="@+id/widget_ring_inner"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_ring_inner" />

    </FrameLayout>

    <!-- Stats with Labels -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Done Stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_done"
                android:contentDescription="Done" />

            <TextView
                android:id="@+id/widget_done_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Done"
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Pending Stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_pending"
                android:contentDescription="Pending" />

            <TextView
                android:id="@+id/widget_pending_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Pending"
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Activities Stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_activities"
                android:contentDescription="Activities" />

            <TextView
                android:id="@+id/widget_activities_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Activities"
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
