<?xml version="1.0" encoding="utf-8"?>
<!-- 2x1 Compact Strip Widget - Dark Navy Design -->
<!-- Layout: Logo (36dp) + 4 data items (icon 14dp + value 13sp) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="@drawable/widget_background">

    <!-- App Logo with Glow -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp">

        <!-- Glow effect behind logo (ImageView allowed in RemoteViews, View is not) -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/widget_logo_glow"
            android:contentDescription="@null" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="JournalMate" />
    </FrameLayout>

    <!-- Data Row: Goals, Tasks, Activities, Groups -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Goals -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_goals"
                android:contentDescription="Goals" />

            <TextView
                android:id="@+id/widget_goals_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="0"
                android:textColor="#10b981"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tasks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_tasks"
                android:contentDescription="Tasks" />

            <TextView
                android:id="@+id/widget_tasks_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="0"
                android:textColor="#3b82f6"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Activities -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_activities"
                android:contentDescription="Activities" />

            <TextView
                android:id="@+id/widget_activities_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="0"
                android:textColor="#f472b6"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Groups -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_widget_groups"
                android:contentDescription="Groups" />

            <TextView
                android:id="@+id/widget_groups_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="0"
                android:textColor="#f59e0b"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
