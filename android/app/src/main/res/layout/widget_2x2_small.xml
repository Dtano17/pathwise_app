<?xml version="1.0" encoding="utf-8"?>
<!-- 2x2 Small Widget - Triple Ring + Stats -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JournalMate"
        android:textColor="#1a1a1a"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Triple Ring Section -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp">

        <!-- Outer Ring Background (Done - Gray) -->
        <ProgressBar
            android:id="@+id/widget_ring_outer_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/widget_ring_outer_bg" />

        <!-- Outer Ring (Done - Green) -->
        <ProgressBar
            android:id="@+id/widget_ring_outer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_ring_outer" />

        <!-- Middle Ring Background (Pending - Gray) -->
        <ProgressBar
            android:id="@+id/widget_ring_middle_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/widget_ring_middle_bg" />

        <!-- Middle Ring (Pending - Orange) -->
        <ProgressBar
            android:id="@+id/widget_ring_middle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_ring_middle" />

        <!-- Inner Ring Background (Activities - Gray) -->
        <ProgressBar
            android:id="@+id/widget_ring_inner_bg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/widget_ring_inner_bg" />

        <!-- Inner Ring (Activities - Blue) -->
        <ProgressBar
            android:id="@+id/widget_ring_inner"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_ring_inner" />

    </FrameLayout>

    <!-- Stats Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <!-- Done Stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_widget_done"
                android:contentDescription="Done" />

            <TextView
                android:id="@+id/widget_done_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                android:textColor="#1a1a1a"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Pending Stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_widget_pending"
                android:contentDescription="Pending" />

            <TextView
                android:id="@+id/widget_pending_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                android:textColor="#1a1a1a"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Activities Stat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_widget_activities"
                android:contentDescription="Activities" />

            <TextView
                android:id="@+id/widget_activities_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                android:textColor="#1a1a1a"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
