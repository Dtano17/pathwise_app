<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for JournalMate Android App

  Production: Only HTTPS traffic allowed
  Development: Localhost cleartext allowed for Capacitor live reload
-->
<network-security-config>
    <!-- Default: Block all cleartext (HTTP) traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext only for localhost (Capacitor development server) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- Production API domain - HTTPS only -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">journalmate.ai</domain>
    </domain-config>
</network-security-config>
